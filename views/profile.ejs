<%- include('include/header') -%>

<!-- navbar -->
<%- include('include/navbr') -%>

<div class="container-fluid ms-4 mt-4">
    <div class="row">
        <div class="col-md-3 account-nav rounded shadow">
            <label for="name"><%= user.name %></label>
            <hr>
            <ul>
                <div class="w-100 bg-secondary"><li><a href="/useraccount" class="text-white">Profile</a></li></div>
                <li><a href="/useraddress">Addresses</a></li>
                <li><a href="#">My Orders</a></li>
                <li><a href="#">My Cart</a></li>
                <li><a href="#">My Wishlist</a></li>
                <hr>
                <li class="align-bottom"><a href="/logout">Logout</a></li>
            </ul>
        </div>
        <div class="col-9 account-content  px-5">
            <div id="profile" class="rounded bg-white p-5">
                <h2>Profile</h2>
                <form action="/update-user/<%= user.id %>" method="post" encType="multipart/form-data" class="p-5 sm:p-10" id="profileForm">
                    <div class="row">
                        <label class="col-9"><b>Personal Information </b><a href="#" class="ms-5 edit-link" onclick="enableEdit()">Edit</a></label>
                    </div>
                    <div class="flex flex-col gap-4 items-start">
                        <div class="row justify-between items-center mb-3">
                            <input type="hidden" id="user_id" name="id" value="<%= user.id %>">
                            <label for="name" class="col-6 col-form-label me-5">Username:</label><br>
                            <div class="col-6 me-5">
                                <input type="text" class="form-control mb-3" name="name" value="<%= user.name %>" required disabled />
                            </div>
                            <label class="col-6 col-form-label me-5">Gender:</label><br>
                            <div class="col-6 me-5" id="radioInput">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" value="male" <% if(user.gender == "Male") { %> checked <% } %> required disabled />
                                    <label class="form-check-label">Male</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="gender" value="female" <% if(user.gender == "Female") { %> checked <% } %> required disabled />
                                    <label class="form-check-label">Female</label>
                                </div>
                            </div>
                            <label for="email" class="col-6 me-5 col-form-label">Email:</label><br>
                            <div class="col-6 me-5">
                                <input type="email" class="form-control" name="email" value="<%= user.email %>" required disabled />
                            </div>
                        </div>
                        <div class="row" id="editButtons" style="display: none;">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2 mb-4">Update</button>
                                <a class="btn btn-primary border rounded-pill px-4 py-2 mb-4" href="#" onclick="cancelEdit()">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function enableEdit() {
        document.querySelectorAll('#profileForm input').forEach(function(input) {
            input.disabled = false;
        });
        document.getElementById('editButtons').style.display = 'block';
    }

    function cancelEdit() {
        document.querySelectorAll('#profileForm input').forEach(function(input) {
            input.disabled = true;
        });
        document.getElementById('editButtons').style.display = 'none';
    }
</script>


