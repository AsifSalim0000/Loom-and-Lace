        <div class="mb-3">
        <label for="p_name" class="form-label">Product :</label>
        <select class="form-control" id="category" name="category" required>
            <option value="">Select Product</option>
            <% products.forEach(product => { %>
                <option value="<%= product._id %>"<%if(product.product_name==offer.productId.product_name){%>selected<%}%>><%= offer.productId.product_name %></option>
            <% }); %>
        </select>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Discount:</label>
          <input type="number" class="form-control" id="discount" name="discount" value="<%= offer.discountPercentage%>" required>
      </div>
      <div class="mb-3" style="display: none;">
        <label for="edate" class="form-label">Expire Date:</label>
        <input type="text" class="form-control datepicker" id="edate" name="edate" value="<%= offer.expiryDate%>" >
    </div>
