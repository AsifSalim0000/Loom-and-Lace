<div class="container-fluid ms-4 mt-4">
    <div class="row">
        <div class="col-md-3 account-nav rounded shadow">
            <label for="name"><%= user.name %></label>
            <hr>
            <ul>
                <li><a href="/useraccount" >Profile</a></li>
                <li><a href="/useraddress">Addresses</a></li>
                <li><a href="/userorders">My Orders</a></li>
                <li><a href="/wishlisted" >My Wishlist</a></li>
                <div class="w-100 bg-secondary"> <li><a href="/forgot-otp" class="text-white">Forgot Password</a></li></div>
                <hr>
                <li class="align-bottom"><a href="/logout">Logout</a></li>
            </ul>
        </div>
        
<div class="col-9 account-content  px-5">
   <div class="container d-flex justify-content-center align-items-center">
    <div class="card text-center">
        <div class="card-header p-5">
            <img src="/img/download.png">
            <h5 class="mb-2">OTP VERIFICATION</h5>
            <div>
                <small>code has been send to your mail</small>
            </div>
        </div>
        <form action="/ver-otp" method="post">
        <div id="otpForm" class="form-control border-0 input-container d-flex flex-row justify-content-center mt-2">
            <input type="name"  class="text-center form-control rounded w-50" name="otp" id="otp">
        </div>

        <div class="resend">
            <small>
                Didn't get the OTP
                <span id="timer" class="text-decoration-none"></span>
                <a href="#" id="resendLink" class="text-decoration-none" style="display: none;">Resend</a>
            </small>
        </div>

        <div class="mt-3 mb-5">
           <button class="btn btn-success px-4" type="submit">Verify</button>
        </div>
    </form>
    <p><%= message %></p>
    </div>
</div>
</div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const resendLink = document.getElementById('resendLink');
    const timerElement = document.getElementById('timer');

    const startTimer = () => {
        let timeLeft = 60;

        const timer = setInterval(() => {
            const minutes = Math.floor(timeLeft / 60);
            let seconds = timeLeft % 60;

            // Add leading zero to seconds if less than 10
            seconds = seconds < 10 ? '0' + seconds : seconds;

            timerElement.textContent = `(${minutes}:${seconds})`;

            if (timeLeft === 0) {
                clearInterval(timer);
                resendLink.style.display = 'inline'; // Display the "Resend" link
            }

            timeLeft--;
        }, 1000);
    };

    // Start the timer
    startTimer();
});            
                    

    document.addEventListener('DOMContentLoaded', function () {
        const inputs = document.querySelectorAll('#otpForm input');

        inputs.forEach(function (input, index) {
            input.addEventListener('keyup', function () {
                if (this.value.length === 1) {
                    if (index < inputs.length - 1) {
                        inputs[index + 1].focus();
                    }
                }
            });

            input.addEventListener('keydown', function (e) {
                if (e.key === 'Backspace' && index > 0 && this.value.length === 0) {
                    inputs[index - 1].focus();
                }
            });
        });
    });            
</script>
