<script src="/js/chartjs.min.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', async function () {
    const ctx = document.getElementById('chart-bars').getContext('2d');
    const ctx2 = document.getElementById('chart-line').getContext('2d');

    try {
      const salesResponse = await fetch('/admin/sales-data');
      const salesData = await salesResponse.json();

      const monthlySalesResponse = await fetch('/admin/monthly-sales-data');
      const monthlySalesData = await monthlySalesResponse.json();

      const salesChart = new Chart(ctx, {
      type: 'bar',
        data: {
         labels: salesData.labels,
    datasets: [{
      label: 'Sales',
      data: salesData.sales,
      backgroundColor: 'rgba(255, 255, 255, .8)',
      maxBarThickness: 6
    }]
  },
  options: {
    scales: {
      y: {
        max: 20, 
        beginAtZero: true 
      }
    }
  }
});


      const monthlySalesChart = new Chart(ctx2, {
        type: 'line',
        data: {
          labels: monthlySalesData.labels,
          datasets: [{
            label: 'Sales Amount',
            data: monthlySalesData.salesAmount,
            borderColor: 'rgba(255, 255, 255, .8)',
            backgroundColor: 'transparent',
            borderWidth: 4,
            pointRadius: 5,
            pointBackgroundColor: 'rgba(255, 255, 255, .8)',
            fill: true
          }]
        },
        options: {
          // Chart options
        }
      });
    } catch (error) {
      console.error(error);
    }
  });
</script>